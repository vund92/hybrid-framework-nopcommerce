<?xml version="1.0" encoding="UTF-8"?>
<suite name="NopCommerce UI Automation Testing" parallel="tests" thread-count="2">
	<!-- parallel="tests" mới chạy song song tất cả các test case trên các Nodes-->
	
	<parameter name="envName" value="grid" />
	<parameter name="serverName" value="dev" />
	﻿
	<listeners>
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
		<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
		<listener class-name="commons.MethodListener" />
		<listener class-name="reportConfig.ExtentTestListenerV5" />
		<listener class-name="reportConfig.ReportNGListener" />
		<listener class-name="retryConfig.RetryListener" />
	</listeners>

	<test name="Run on Firefox">
		<parameter name="browser" value="firefox" />
		<parameter name="osName" value="windows" />
		<parameter name="ipAddress" value="192.168.1.7" /> <!-- IP Address of some Node -->
		<parameter name="port" value="5555" />
		<classes>
			<class name="com.nopcommerce.grid.Level_23_Local" />
		</classes>
	</test>

	<test name="Run on Chrome">
		<parameter name="browser" value="chrome" />
		<parameter name="osName" value="windows" />
		<parameter name="ipAddress" value="192.168.1.8" /> <!-- IP Address of some Node -->
		<parameter name="port" value="6666" />
		<classes>
			<class name="com.nopcommerce.grid.Level_23_Local" />
		</classes>
	</test>

	<test name="Run on Edge">
		<parameter name="browser" value="edge" />
		<parameter name="osName" value="Windows" />
		<parameter name="ipAddress" value="192.168.1.4" /> <!-- IP Address of some Node -->
		<parameter name="port" value="6666" />
		<classes>
			<class name="com.nopcommerce.grid.Level_23_Local" />
		</classes>
	</test>

	<test name="Run on Opera">
		<parameter name="browser" value="opera" />
		<parameter name="osName" value="windows" />
		<parameter name="ipAddress" value="192.168.1.4" /> <!-- IP Address of some Node -->
		<parameter name="port" value="6666" />
		<classes>
			<class name="com.nopcommerce.grid.Level_23_Local" />
		</classes>
	</test>

</suite>